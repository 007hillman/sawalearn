<section class = "pl-4  text-gray-900 h-full">
	<h1 class="font-bold pt-2 text-md"> Activity feed </h1>
<hr>
	<% if @activity == nil %>
		<p>No activity yet </p>
	<% else %>
		<% @activity.each do |activity| %>
			<div class=" my-2">
				<p> <%= activity.name %> </p>
				<p> <%= activity.description %> </p>
				<p> <%= activity.created_at %> </p>
			</div>
<hr>
		<%end%>
	<% end %>
</section>
