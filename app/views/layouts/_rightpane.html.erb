<section class = "pl-4  text-gray-900 h-full">

	<div>
		<h1 class="font-bold pt-2 text-md"> <%= t('welcome.activity_feed') %> </h1>
		<hr>
		<% if @activity == nil %>
			<p> <%= t('welcome.no_activity') %> </p>
		<% else %>
			<% @activity.each do |activity| %>
				<div class=" my-2">
					<p class="font-semibold"> <%= activity.name %> </p>
					<p> <%= activity.description %> </p>
					<p> <%= activity.created_at %> </p>
				</div>
			<hr>
			<%end%>
		<% end %>
	</div>
	<div id="status_view" class ="">

	</div>
</section>
