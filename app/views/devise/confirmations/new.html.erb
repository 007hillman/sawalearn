<section class="mx-4 ">
	<h2 class=" font-hairline text-2xl text-yellow-400 mb-2">Resend confirmation instructions</h2>

	<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
	  <%= f.error_notification %>
	  <%= f.full_error :confirmation_token %>

	  <div class="form-inputs mb-4">
	    <%= f.input :email, required: true, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), label_html: {class: " block font-semibold "},
		        input_html: { autocomplete: "email", class: " border border-1 border-blue-700  px-4 py-1 rounded-md  w-full md:w-1/3"} %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Resend confirmation instructions" , class: "px-4 py-1 rounded-sm bg-blue-800 text-white font-semibold" %>
	  </div>
	<% end %>
	 <p class = "text-blue-700 underline ">
		<%= render "devise/shared/links" %>
	</p>
</section>
