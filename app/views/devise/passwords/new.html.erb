<section class =" mx-4 ">
<h2 class="mb-4 font-hairline text-2xl text-red-400 block w-full md:w-1/3">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs mb-2">
    <%= f.input :email,required: true, autofocus: true, label_html: {class: "font-semibold block "} , 
                input_html: { autocomplete: "email", class: "border border-1 border-gray-900 w-full md:w-1/3 px-4 py-1 rounded-md" } %>
  </div>

  <div class="form-actions mb-4">
    <%= f.button :submit, "Send me reset password instructions", class: "bg-blue-600, px-4, py-2, rounded-md, w-full, md:w-1/3" %>
  </div>
<% end %>
<p class="underline font-hairline text-blue-500">
<%= render "devise/shared/links" %>
</p>
</section>
