<p id="notice"><%= notice %></p>
<section class=" mx-4">
	<div class= "flex justify-between  py-4">
		    <%= link_to t('general_buttons.back') , lesson_path(current_lesson) , class: "font-semibold block px-8 py-1 rounded-md hover:bg-red-200" , style: "background-color: #ff3860; color: #fff;" %>
		    <% if current_user && current_user.admin %> <%= link_to  t('quiz.show.new_quiz') , new_quiz_path,  class: "font-semibold block rounded-md px-8 py-1 bg-green-400" , style: "color: #ffe ;" %> <% end %>
		</div>

	<h1 class="text-center text-xl font-semibold "> <%= t('quiz.index.results') %> </h1>
		<% if @quizzes.empty? %>
			<p class = "block w-full text-center text-lg"> No Quiz created yet. </p>
		<% else %>
			<% @quizzes.each do |quiz| %>
				<div class = "" >
					<div class= "w-full"><%= quiz.question %>  </div>
					<div class="w-full grid grid-cols-4">
						<% if  get_verdict(quiz.id)== "failed" %> 
							<span class = "text-red-400 font-semibold" > <%= t('quiz.index.failed') %> </span>
						<% else %>
							<span class="text-green-400 font-semibold"><%= t('quiz.index.passed') %></span>
						<% end %>
					</div>
				</div>
				<hr >
			<% end %>
		<% end %>

	<br>
</section>
