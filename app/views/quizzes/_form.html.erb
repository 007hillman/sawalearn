
<%= simple_form_for(@quiz) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :question , label_html: {class: "font-semibold"}, input_html: {class: "block w-full border border-2 border-gray-400 mb-3", rows: 3}%>
    <%= f.input :option1 , label_html: {class: "font-semibold"}, input_html: {class: " option1 py-1 block w-2/3 border border-2 border-gray-400 "} %>
    <%= f.input :option2 , label_html: {class: "font-semibold"}, input_html: {class: "option2 py-1 block w-2/3 border border-2 border-gray-400" }%>
    <%= f.input :option3 , label_html: {class: "font-semibold"}, input_html: {class: "option3 py-1 block w-2/3 border border-2 border-gray-400" }%>
    <%= f.input :option4 , label_html: {class: "font-semibold"}, input_html: {class: "option4 py-1 block w-2/3 border border-2 border-gray-400" }%>
    <%= f.input :correct_response , :collection => ([["option1",1],["option2",2], ["option3", 3],["option4",4]]) , label_html: {class: "font-semibold"}, input_html: {class: " bg-white rounded-md block py-1 w-2/3 border border-2 border-gray-400" }, include_blank: false%>
    <%= f.association :lesson , label_html: {class: " font-semibold"}, input_html: {class: "block py-1  w-full bg-white border border-2 border-gray-400" }, include_blank: false%>
  </div>
<div class=" flex justify-between mt-5">
  <div class="form-actions">
    <%= f.button :submit , class: "bg-green-600 px-8 py-1 rounded-md font-semibold ", style: "color: #ffe; "%>
  </div>
  <div>
<% end %>


