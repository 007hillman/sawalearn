

<p id="notice"><%= notice %></p>
<section class=" ">
	<div class= "flex justify-between  px-2 border bordder-2 border-gray-200">
		    <%= link_to 'Back', lesson_path(current_lesson) , class: "font-semibold block px-8 py-1 rounded-md hover:bg-red-200" , style: "background-color: #ff3860; color: #fff;" %>
		    <% if current_user && current_user.admin %> 
			<%= link_to  'New Quiz', new_quiz_path,  class: "font-semibold block rounded-md px-8 py-1 bg-green-400" , style: "color: #ffe ;" %> 
			<%= link_to 'Edit', edit_quiz_path(@quiz) %> 
			<% end %>
		</div>

			<% if @quiz ==  nil %>
			<p class=""> No quiz created yet </p>
			<% else %>
				<div class= "w-full mx-4 mt-10 mb-2"><%= @quiz.question %>  </div>
				<hr>
				<form id="my_radio_box">
				<div class="mx-4 mt-2 flex flex-row justify-between"> 
				
				    <div ><input type="radio" name="my_options" value= <%= @quiz.option1 %>> <%= @quiz.option1 %> </input> </div>
				    <div ><input type="radio" name="my_options" value= <%= @quiz.option2 %>> <%= @quiz.option2 %>	</input></div>
				    <div ><input type="radio" name="my_options" value= <%= @quiz.option3 %>> <%= @quiz.option3 %> </input></div>
				    <div ><input type="radio" name="my_options" value= <%= @quiz.option4 %>> <%= @quiz.option4 %> </input></div>
				
				</div>
			</form>
			<% end %>
	<br>
	<div class=" text-right flex justify-between mx-4"> 
		<div class="flex">
			<p id="btn" class="block hidden font-semibold cursor-pointer rounded-md px-8 py-1 text-blue-600 hover:bg-blue-200"> verify answer</p>
			<p class=" wrong text-lg text-red-400 hidden"> Inocrrect response </p>
        <p class="correct text-lg text-green-400 hidden"> CORRECT RESPONSE!! </p>

		</div>
		<%= link_to "Next" , quiz_path( next_quiz), class: "hidden block bg-blue-400 font-semibold rounded-md px-8 py-1 ", style: "color: white;", id: "next-button" %> </div>
		<div class="">	
		</div>

</section>


<script >
$(document).ready(function(){
        $('#my_radio_box').change(function(){
            selected_value = $("input[name='my_options']:checked").val();
			$('#btn').toggleClass("hidden",false);
            $('#btn').click(function(){
				$(this).toggleClass("hidden");
				$('#next-button').toggleClass("hidden");
            	if (selected_value == "<%= escape_javascript @quiz.correct_response_text %>") {
            		$('.correct').toggleClass("hidden");
            		} else {
            		$('.wrong').toggleClass("hidden");

            		}
            });
        });
    });

</script>
