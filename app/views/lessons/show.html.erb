<section class=" px-10 py-4">
<p id="notice"><%= notice %></p>
	<div class= "flex justify-between  py-4">
		<div> <%= link_to 'Back', lessons_path %></div>
		<div><%= link_to 'Edit', edit_lesson_path(@lesson) %>  </div>
		<div> Go to activities /> </div>
	</div>
	<p> <strong> Name:</strong> <%= @lesson.name %> </p>
	<p> <strong>Subject:</strong> <%= @lesson.subject_id %> </p>
	
	<!-- the video and the text section of the lesson -->
	<div class="grid grid-cols-1 md:grid-cols-1 "> <!-- grid so we can put then side by side -->
		<div class=" w-full"> 
			<% if @lesson.lesson_video.attached? %>
			<%= video_tag(url_for(@lesson.lesson_video), style: "width: 100% ; height: auto; ", controls: "" ) %>  
			<% end %>
			</div>
			<div class="">
				<p class="font-bold text-lg "> <%= @lesson.name + " text : " %> </p>
				<p class=""> <%= @lesson.lesson_notes %> </p>
			</div>
		<div class="w-full my-4 text-left "> <p class="text-lg font-bold"> Other lesson materials :</p> 
			<p class=" text-md font-semibold"> Pictures : </p>
		</div>
		<div class="w-full grid grid-cols-1 md: grid-cols-3"> 
			<% @lesson.lesson_pictures.each do |picture| %>	
			<div class="px-2"> <%= image_tag(picture , style: "width: 100%; height: 100%; ")%></div>
			<% end %>
		</div>
	</div>
</section>
